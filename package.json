{
  "name": "danestves-frontend",
  "version": "3.3.0",
  "description": "Frontend website onf @danestves portfolio made with NextJS & GraphCMS",
  "repository": {
    "type": "git",
    "url": "https://github.com/danestves/website.git"
  },
  "author": "Daniel Esteves <estevesd8@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "next lint",
    "generate": "DOTENV_CONFIG_PATH=.env.local graphql-codegen -r dotenv/config --config codegen.yml",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'feat(auto): updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'feat(auto): updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'feat(auto): updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fec/remark-a11y-emoji": "^3.1.0",
    "@flyyer/flyyer": "^3.2.1",
    "@giphy/js-fetch-api": "^4.1.1",
    "@giphy/react-components": "^4.0.1",
    "@graphcms/react-image": "^1.0.1",
    "@headlessui/react": "^1.4.0",
    "@heroicons/react": "^1.0.3",
    "algoliasearch": "^4.10.3",
    "browser-monads-ts": "^1.2.2",
    "clsx": "^1.1.1",
    "date-fns": "^2.23.0",
    "firebase-admin": "^9.11.0",
    "graphql": "^15.5.1",
    "graphql-request": "^3.5.0",
    "gray-matter": "^4.0.3",
    "he": "^1.2.0",
    "isomorphic-fetch": "^3.0.0",
    "kwesforms": "2.1.18",
    "mdx-embed": "^0.0.19",
    "next": "^11.1.0",
    "next-mdx-remote": "^3.0.4",
    "next-pwa": "^5.2.24",
    "next-rosetta": "^1.3.1",
    "next-seo": "^4.26.0",
    "next-themes": "^0.0.15",
    "preact": "^10.5.14",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.2",
    "react-cookie-consent": "^6.3.0",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^3.4.0",
    "react-instantsearch-dom": "^6.12.1",
    "react-use": "^17.2.4",
    "react-use-webp-support-check": "^1.0.21",
    "rehype": "^12.0.0",
    "rehype-autolink-headings": "^6.0.0",
    "rehype-slug": "^5.0.0",
    "remark-code-titles": "^0.1.2",
    "sharp": "^0.28.3",
    "swr": "^0.5.6",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.0.1",
    "@graphql-codegen/typescript": "2.0.0",
    "@graphql-codegen/typescript-graphql-request": "^4.0.0",
    "@graphql-codegen/typescript-operations": "2.0.1",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "@types/gtag.js": "^0.0.7",
    "@types/he": "^1.1.2",
    "@types/node": "^16.6.1",
    "@types/prettier": "^2.3.2",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-instantsearch-dom": "^6.12.0",
    "@types/rss": "^0.0.29",
    "@types/tailwindcss": "^2.2.1",
    "autoprefixer": "^10.3.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "generate-changelog": "^1.8.0",
    "globby": "^12.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "next-progressbar": "^1.0.0",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint --dir src/pages",
      "yarn format"
    ]
  }
}
