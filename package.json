    "@stitches/react": "^1.2.6",
    "algoliasearch": "^4.12.0",
    "axios": "^0.24.0",
    "browser-monads-ts": "^1.2.5",
    "contentlayer": "^0.0.33",
    "copy-to-clipboard": "^3.3.1",
    "date-fns": "^2.28.0",
    "mdx-embed": "^0.0.22",
    "microtip": "^0.2.2",
    "nanoid": "^3.1.30",
    "next": "^12.0.8-canary.19",
    "next-compose-plugins": "^2.2.1",
    "next-connect": "^0.11.0",
    "next-contentlayer": "^0.0.33",
    "next-plausible": "^3.1.4",
    "next-rosetta": "^2.0.0",
    "next-seo": "^4.28.1",
    "next-themes": "^0.0.15",
    "preact": "10.5.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^3.4.4",
    "react-instantsearch-dom": "^6.19.0",
    "swr": "^1.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@giphy/js-types": "^4.1.0",
    "@next/bundle-analyzer": "^12.0.7",
